{
  "name": "@google-cloud/observability-mcp",
  "displayName": "Cloud Observability MCP",
  "version": "0.2.3",
  "type": "module",
  "description": "MCP Server for GCP environment for interacting with various Observability APIs.",
  "files": [
    "dist/"
  ],
  "bin": {
    "observability-mcp": "./dist/bundle.js"
  },
  "scripts": {
    "build": "tsc --noemit && node build.js",
    "test": "vitest run",
    "start": "node dist/bundle.js",
    "lint": "prettier --check . && eslint . --max-warnings 0",
    "fix": "prettier --write . && eslint . --fix",
    "prepare": "npm run build",
    "pretest": "npm run build",
    "posttest": "npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/googleapis/gcloud-mcp.git",
    "directory": "packages/observability-mcp"
  },
  "keywords": [
    "gcp",
    "google cloud",
    "mcp",
    "mcp server",
    "observability"
  ],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/googleapis/gcloud-mcp/issues"
  },
  "homepage": "https://github.com/googleapis/gcloud-mcp#readme",
  "author": "Google LLC",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "google-auth-library": "^10.1.0",
    "googleapis": "^171.0.0",
    "@types/yargs": "^17.0.33",
    "yargs": "^18.0.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.0",
    "@tsconfig/strictest": "^2.0.5",
